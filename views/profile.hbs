<body>
	<!-- *** MAIN NAV START *** -->
{{> nav}}
	<!-- *** MAIN NAV END *** -->

	<div class="container text-center">
		<div class="row">
			<div class="col-4">
				<h1 class="border-bottom">Profile</h1>
				<!-- *** PROFILE FORM START *** -->
				<form action="/profile?_method=PATCH" method="post">
					<div class="mb-3">
						<label for="exampleFormControlInput1" class="form-label"
							>Full Name</label
						>
						<input type="text" class="form-control" name="name" value="{{user.name}}" />
					</div>

					<div class="mb-2">
						<label for="exampleFormControlInput3" class="form-label"
							>Email address</label
						>
						<input type="email" class="form-control" name="email" value="{{user.email}}" />
					</div>
					<div class="mb-3">
						<label for="exampleFormControlInput2" class="form-label"
							>Password</label
						>
						<input
							type="password"
							class="form-control"
							name="password"
							value="{{user.password}}"
						/>
					</div>
					<div class="mb-3">
						<label for="formGroupExampleInput" class="form-label"
							>Profile Picture</label
						>
						<div class="">
							<img
								src="https://avatars.githubusercontent.com/u/19708712?v=4"
								alt=""
								class="profile-button"
							/>
						</div>
					</div>
					<div class="mb-3">
						<input
							type=" url"
							class="form-control"
							name="avatar"
							placeholder="http://..."
							value="{{user.avatar}}"
						/>
					</div>
					<div class="">
						<button  class="btn btn-success">
							Save Changes
						</button>
					</div>
				</form>
				<!-- *** PROFILE FORM END *** -->
			</div>

			<div class="col-7 offset-1">
				<h1 class="border-bottom">My Listings</h1>
				<div class="text-start mx-4">
					<a class="btn btn-success" href='/houses/create' method='get'>
						List a House
					</a>
					<!-- *** No HOUSES LISTED START *** -->
					<div class="m-3 border p-2">
						<p class="text-center">You dont have any houses listed</p>
					</div>
					<!-- *** NO HOUSE LISTED END *** -->
					<!-- *** WITH HOUSE LISTING START *** -->
					{{#each userHouses as |house|}}
					<div class="card w-100 my-3">
						<div class="container text-center">
							<div class="row">
								<div class="col-6 p-4">
									<img
										src="{{house.photos.[0]}}"
										class="card-img-top"
										alt="..."
									/>
								</div>
								<div class="col-6 p-4 text-start">
									<div class="card-body">
										<h5 class="card-title">{{house.title}}</h5>
										<span class="text-muted">{{house.rooms}} Rooms</span>
										<span class="card-link card-location text-muted"
											>â€¢ ${{house.price}}/night</span
										>
										<p class="card-text">{{house.decription}}
										</p>
									</div>
									<div class="">
										<a href="#" class="btn btn-outline-secondary">Edit </a>
										<a href="#" class="btn btn-outline-success">View</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					{{/each}}

					<!-- *** WITH HOUSE LISTING END *** -->
				</div>
			</div>
		</div>
	</div>
</body>
